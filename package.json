{
  "name": "pilou",
  "version": "0.1.3",
  "description": "http crud library for making web requests with promises",
  "main": "lib/pilou.js",
  "scripts": {
    "babelify": "babel pilou.js -o lib/pilou.js",
    "build": "rm -rf lib && mkdir lib && npm run babelify",
    "prepublish": "npm test && npm run build",
    "test": "ava --require babel-core/register && xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guillaumevincent/pilou.git"
  },
  "keywords": [
    "http",
    "crud",
    "promise"
  ],
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guillaumevincent/pilou/issues"
  },
  "homepage": "https://github.com/guillaumevincent/pilou#readme",
  "dependencies": {
    "axios": "^0.14.0",
    "es6-template-render": "^0.1.1"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "nock": "^8.0.0",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "ignores": [
      "lib/**",
      "test/_node.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "comments": false
  }
}
